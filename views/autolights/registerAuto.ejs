<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h2 align="center">Νέος Αυτόματος Πυρσός</h2>
		<form action="/autoLighthouses/registerAuto" method="POST" class="row g-3">
			<div class="col-md-6">
				<label for="aef" class="form-label">ΑΕΦ</label>
				<input type="text" class="form-control" name="aef" id="aef" required>
			</div>
			<div class="col-md-6">
				<label for="lighthouse" class="form-label">ΟΝΟΜΑΣΙΑ</label>
				<input type="text" class="form-control" name="lighthouse" id="lighthouse" required>
			</div>
			<div class="col-md-4">
				<label for="colour" class="form-label">ΧΡΩΜΑΤΙΣΜΟΣ</label>
				<input type="text" class="form-control" name="colour" id="colour">
			</div>
			<div class="col-md-4">
				<label for="sections" class="form-label">ΤΟΜΕΙΣ</label>
				<input type="text" class="form-control" name="sections" id="sections">
			</div>
			<div class="col-md-4">
				<label for="features" class="form-label">ΧΑΡΑΚΤΗΡΙΣΤΙΚΟ</label>
				<input type="text" class="form-control" name="features" id="features">
			</div>
			<div class="col-md-6">
				<label for="position" class="form-label">ΠΕΡΙΓΡΑΦΗ ΘΕΣΕΩΣ/ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="text" class="form-control" name="position" id="position">
			</div>
			<div class="col-md-6">
				<label for="location" class="form-label">ΠΕΡΙΟΧΗ</label>
				<input type="text" class="form-control" name="location" id="location">
			</div>
			<div class="col-md-6">
				<label for="lighter" class="form-label">ΕΚΛΑΜΠΤΗΡΑΣ</label>
				<input type="text" class="form-control" name="lighter" id="lighter">
			</div>
            <div class="col-md-6">
				<label for="lighterDate" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="lighterDate" id="lighterDate">
			</div>

			<div class="col-md-6" id="fieldListSolar">
				<label for="solarGenerator[]" class="form-label">ΗΛΙΑΚΗ ΓΕΝΝΗΤΡΙΑ</label>
				<input type="text" class="form-control" list="datalistOptions1" name="solarGenerator[]" id="solarGenerator">
				<datalist id="datalistOptions1">
					<% if(storeroom != undefined) { %>
						<% for (var i=0; i < storeroom.solarGenerators.length; i++) { %>
							<option value="<%= storeroom.solarGenerators[i] %>">
						<% } %>
					<% } %>
				</datalist>
				<button class="btn btn-primary" id="addMoreSolar">Προσθήκη Ηλιακής Γεννήτριας</button>
			</div>
            <div class="col-md-6">
				<label for="solarGeneratorDate[]" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="solarGeneratorDate[]" id="solarGeneratorDate">
			</div>
			<div class="col-md-6">
				<label for="alternator" class="form-label">ΕΝΑΛΛΑΚΤΗΣ</label>
				<input type="text" class="form-control" name="alternator" id="alternator">
			</div>
            <div class="col-md-6">
				<label for="alternatorDate" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="alternatorDate" id="alternatorDate">
			</div>

			<div class="col-md-6" id="fieldListLamp">
				<label for="lamp[]" class="form-label">ΛΥΧΝΙΑ</label>
				<input type="text" class="form-control" list="datalistOptions2" name="lamp[]" id="lamp">
				<datalist id="datalistOptions2">
					<% if(storeroom != undefined) { %>
						<% for (var i=0; i < storeroom.lamps.length; i++) { %>
							<option value="<%= storeroom.lamps[i] %>">
						<% } %>
					<% } %>
				</datalist>
				<button class="btn btn-primary" id="addMoreLamp">Προσθήκη Λυχνίας</button>
			</div>

            <div class="col-md-6">
				<label for="lampDate[]" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="lampDate[]" id="lampDate">
			</div>
			<div class="col-md-6" id="fieldListAcc">
				<label for="accumulator[]" class="form-label">ΣΥΣΣΩΡΕΥΤΗΣ</label>
				<input type="text" class="form-control" list="datalistOptions" name="accumulator[]" id="accumulator">
				<datalist id="datalistOptions">
					<% if(storeroom != undefined) { %>
						<% for (var i=0; i < storeroom.accumulators.length; i++) { %>
							<option value="<%= storeroom.accumulators[i] %>">
						<% } %>
					<% } %>
				</datalist>
				<button class="btn btn-primary" id="addMoreAcc">Προσθήκη Συσσωρευτή</button>
			</div>
			<div class="col-md-6">
				<label for="accumulatorDate[]" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="accumulatorDate[]" id="accumulatorDate">
			</div>
			<div class="col-md-6">
				<label for="head" class="form-label">ΚΕΦΑΛΗ</label>
				<input type="text" class="form-control" list="heads" name="head" id="head">
				<datalist id="heads">
					<% if(storeroom != undefined) { %>
						<% for (var i=0; i < storeroom.heads.length; i++) { %>
							<option value="<%= storeroom.heads[i] %>">
						<% } %>
					<% } %>
				</datalist>
			</div>
            <div class="col-md-6">
				<label for="headDate" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="headDate" id="headDate">
			</div>
			<div class="col-md-6">
				<label for="generatorSocket" class="form-label">ΡΥΘΜΙΣΤΗΣ ΦΟΡΤΙΣΕΩΣ/ ΦΟΡΤΙΣΤΗΣ</label>
				<input type="text" class="form-control" name="generatorSocket" id="generatorSocket">
			</div>
            <div class="col-md-6">
				<label for="generatorSocketDate" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="generatorSocketDate" id="generatorSocketDate">
			</div>
			<div class="col-md-6">
				<label for="torchSocket" class="form-label">ΥΠΟΔΟΧΗ ΠΥΡΣΟΥ</label>
				<input type="text" class="form-control" name="torchSocket" id="torchSocket">
			</div>
            <div class="col-md-6">
				<label for="torchSocketDate" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="torchSocketDate" id="torchSocketDate">
			</div>
			<div class="col-md-6">
				<label for="photocell" class="form-label">ΦΩΤΟΚΥΤΤΑΡΟ</label>
				<input type="text" class="form-control" name="photocell" id="photocell">
			</div>
            <div class="col-md-6">
				<label for="photocellDate" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="photocellDate" id="photocellDate">
			</div>
			<div class="col-md-6">
				<label for="accessory" class="form-label">ΠΡΟΣΘΕΤΟ ΕΞΑΡΤΗΜΑ</label>
				<input type="text" class="form-control" name="accessory" id="accessory">
			</div>
            <div class="col-md-6">
				<label for="accessoryDate" class="form-label">ΗΜ/ΝΙΑ ΤΟΠΟΘΕΤΗΣΗΣ</label>
				<input type="date" class="form-control" name="accessoryDate" id="accessoryDate">
			</div>
			<div class="text-center">
				<a onclick="window.history.back()" class="btn btn-outline-primary float-left">Πίσω</a>
				<button class="btn btn-outline-primary">Εγγραφή</button>
			</div>
		</form>
	</div>
</div>
<br>

<script src="/js/registerLightHouses.js"></script>
<% include ../partials/footer %>
