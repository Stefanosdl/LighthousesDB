<% include ./partials/header %>

<div class="container">
	<h2 align="center">Στοιχεία Τεχνικών</h2>
		<% for (var i=0; i < ledLightHouse.technicians.length; i++) { %>
			<form action="/ledLighthouses/deleteSuggest/<%= ledLightHouse._id %>?_method=PUT" method="POST" class="row g-3">
				<div class="card mb-3 mx-auto" style="max-width: 540px;">
					<div class="row g-0">
						<ul class="list-group list-group-flush">
							<input type="hidden" name="technician" value="<%= ledLightHouse.technicians[i].technician %>">
							<input type="hidden" name="date" value="<%= ledLightHouse.technicians[i].date.toISOString().split('T')[0] %>">
							<input type="hidden" name="description" value="<%= ledLightHouse.technicians[i].description %>">
							<input type="hidden" name="suggests" value="<%= ledLightHouse.technicians[i].suggests %>">
							<li class="list-group-item"><strong>ΤΕΧΝΙΚΟΣ: <%= ledLightHouse.technicians[i].technician %></strong></li>
							<li class="list-group-item" name="date"><strong>ΗΜΕΡΟΜΗΝΊΑ: <%= ledLightHouse.technicians[i].date.toISOString().split('T')[0] %></strong></li>
							<li class="list-group-item"><strong>ΕΚΤΕΛΕΣΘΕΙΣΕΣ ΕΡΓΑΣΙΕΣ: <%= ledLightHouse.technicians[i].description %></strong></li>
							<li class="list-group-item" name="suggests"><strong>ΠΡΟΤΕΙΝΟΜΕΝΕΣ ΕΡΓΑΣΙΕΣ: <%= ledLightHouse.technicians[i].suggests %></strong></li>
							<button class="btn btn-danger" type="submit">Διαγραφή Προτεινόμενης Εργασίας</button>
						</ul>
					</div>
				</div>
			</form>
		<% } %>
	<div class="text-center">
		<div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
			<input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off">
			<a onclick="window.history.back()" class="btn btn-outline-primary float-left">Πίσω</a>
			<a href="/" class="btn btn-outline-primary">Αρχική Σελίδα</a>
			<a href="/ledLighthouses/technicians/new/<%= ledLightHouse._id %>" class="btn btn-outline-primary float-right">Εισαγωγή</a>
		</div>
	</div>
</div>

<% include ./partials/footer %>