<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h2 align="center">Νέος Φωτοσημαντήρας</h2>
		<form action="/lightBeacons/registerLight" method="POST" class="row g-3">
			<div class="col-md-6 mt-0">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">ΑΕΦ</span>
					<input type="text" class="form-control" name="aef" id="aef" required>
				</div>
			</div>
			<div class="col-md-6 mt-0">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">ΟΝΟΜΑΣΙΑ</span>
					<input type="text" class="form-control" name="lighthouse" id="lighthouse" required>
				</div>
			</div>
			<div class="col-md-6 mt-0">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">ΧΡΩΜΑΤΙΣΜΟΣ</span>
					<input type="text" class="form-control" list="colours" name="colour" id="colour">
					<datalist id="colours">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.colours.length; i++) { %>
								<option value="<%= storeroom.colours[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-6 mt-0">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">ΧΑΡΑΚΤΗΡΙΣΤΙΚΟ</span>
					<input type="text" class="form-control" name="features" id="features">
				</div>
			</div>
			<div class="col-md-4 mt-0">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">ΠΕΡΙΓΡΑΦΗ ΘΕΣΕΩΣ/ΤΟΠΟΘΕΤΗΣΗΣ</span>
					<input type="text" class="form-control" name="position" id="position">
				</div>
			</div>
			<div class="col-md-4 mt-0">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">ΠΕΡΙΟΧΗ</span>
					<input type="text" class="form-control" list="locations" name="location" id="location">
					<datalist id="locations">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.locations.length; i++) { %>
								<option value="<%= storeroom.locations[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-4 mt-0">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">ΗΜ/ΝΙΑ ΠΟΝΤΙΣΕΩΣ</span>
					<input type="date" class="form-control" name="immersionDepthDate" id="immersionDepthDate">
				</div>
			</div>
            <br>
            <div class="input-group input-group-sm mb-3 mt-0">
                <span class="input-group-text" id="inputGroup-sizing-sm">ΣΤΙΓΜΑ</span>
                <input type="text" class="form-control" name="stigmax" id="stigmax" placeholder="Χ:">
                <input type="text" class="form-control" name="stigmay" id="stigmay" placeholder="Ψ:">
            </div>
			<div class="col-md-3 mt-0">
				<label class="form-label"><strong>ΕΞΑΡΤΗΜΑΤΑ ΠΥΡΓΟΥ</strong></label>
			</div>
			<div class="col-md-3 mt-0">
				<label class="form-label"><strong>ΚΑΤΑΣΚΕΥΑΣΤΗΣ</strong></label>
			</div>
			<div class="col-md-2 mt-0">
				<label class="form-label"><strong>ΤΥΠΟΣ</strong></label>
			</div>
			<div class="col-md-2 mt-0">
				<label class="form-label"><strong>ΤΕΜ</strong></label>
			</div>
			<div class="col-md-2 mt-0">
				<label class="form-label"><strong>ΗΜΕΡΟΜΗΝΙΑ</strong></label>
			</div>

			<div class="col-md-3 mt-0">
				<div class="input-group input-group-sm">
                	<span class="input-group-text" id="basic-addon3">ΦΩΤΙΣΤΙΚΟ ΜΗΧΑΝΗΜΑ</span>
				</div>
			</div>
			<div class="col-md-3 mt-0">
				<div class="input-group input-group-sm">
					<input type="text" class="form-control" list="lightingMachineMans" name="lightingMachineMan" id="lightingMachineMan">
					<datalist id="lightingMachineMans">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.lightingMachineMan.length; i++) { %>
								<option value="<%= storeroom.lightingMachineMan[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="text" class="form-control" list="lightingMachineTypes" name="lightingMachineType" id="lightingMachineType">
					<datalist id="lightingMachineTypes">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.lightingMachineType.length; i++) { %>
								<option value="<%= storeroom.lightingMachineType[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="number" class="form-control" name="lightingMachineCounter" id="lightingMachineCounter" min="0">
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="date" class="form-control" name="lightingMachineDate" id="lightingMachineDate">
				</div>
			</div>
			<div class="col-md-3 mt-0">
				<div class="input-group input-group-sm">
                	<span class="input-group-text" id="basic-addon3">ΑΝΑΚΛΑΣΤΗΡΑΣ</span>
				</div>
			</div>
			<div class="col-md-3 mt-0">
				<div class="input-group input-group-sm">
					<input type="text" class="form-control" list="reflectorMans" name="reflectorMan" id="reflectorMan">
					<datalist id="reflectorMans">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.reflectorMan.length; i++) { %>
								<option value="<%= storeroom.reflectorMan[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="text" class="form-control" list="reflectorTypes" name="reflectorType" id="reflectorType">
					<datalist id="reflectorTypes">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.reflectorType.length; i++) { %>
								<option value="<%= storeroom.reflectorType[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="number" class="form-control" name="reflectorCounter" id="reflectorCounter" min="0">
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="date" class="form-control" name="reflectorDate" id="reflectorDate">
				</div>
			</div>
			<div class="col-md-3 mt-0">
				<div class="input-group input-group-sm">
                	<span class="input-group-text" id="basic-addon3">ΕΠΙΣΗΜΑΤΑ</span>
				</div>
			</div>
			<div class="col-md-3 mt-0">
				<div class="input-group input-group-sm">
					<input type="text" class="form-control" list="signsMans" name="signsMan" id="signsMan">
					<datalist id="signsMans">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.signsMan.length; i++) { %>
								<option value="<%= storeroom.signsMan[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="text" class="form-control" list="signsTypes" name="signsType" id="signsType">
					<datalist id="signsTypes">
						<% if(storeroom != undefined) { %>
							<% for (var i=0; i < storeroom.signsType.length; i++) { %>
								<option value="<%= storeroom.signsType[i] %>">
							<% } %>
						<% } %>
					</datalist>
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="number" class="form-control" name="signsCounter" id="signsCounter" min="0">
				</div>
			</div>
			<div class="col-md-2 mt-0">
				<div class="input-group input-group-sm">
					<input type="date" class="form-control" name="signsDate" id="signsDate">
				</div>
			</div>
            <div class="col-md-4">
                <img src="/foto_FR.jpg" class="rounded float-start">
			</div>
			<div class="col-md-8">
				<label for="type" class="form-label">ΤΥΠΟΣ ΦΩΤΟΣΗΜΑΝΤΗΡΑ</label>
				<input type="text" class="form-control" list="types" name="type" id="type">
				<datalist id="types">
					<% if(storeroom != undefined) { %>
						<% for (var i=0; i < storeroom.type.length; i++) { %>
							<option value="<%= storeroom.type[i] %>">
						<% } %>
					<% } %>
				</datalist>
				<label for="usedChain" class="form-label">ΣΥΝΟΛΟ ΧΡΗΣΙΜΟΠΟΙΗΘΕΝΤΟΣ ΑΛΥΣΟΥ</label>
				<input type="number" class="form-control" name="usedChain" id="usedChain" min="0">
				<label for="immersionDepth" class="form-label">ΒΑΘΟΣ ΠΟΝΤΙΣΕΩΣ</label>
				<input type="number" class="form-control" name="immersionDepth" id="immersionDepth" min="0">
				<br>
                <div class="row">
                    <div class="col-8 col-sm-4">
                        <label class="form-label"><strong>ΕΞΑΡΤΗΜΑΤΑ ΠΟΝΤΙΣΕΩΣ</strong></label>
                    </div>
                    <div class="col-8 col-sm-4">
                        <label class="form-label"><strong>ΤΥΠΟΣ</strong></label>
                    </div>
                    <div class="col-8 col-sm-4">
                        <label class="form-label"><strong>ΜΕΤΡΑ</strong></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8 col-sm-4">
                        <span class="input-group-text" id="basic-addon3">ΣΤΑΤΕΡΙ (Άλυσος)</span>
                        <span class="input-group-text" id="basic-addon3">ΑΛΥΣΟΣ</span>
                        <span class="input-group-text" id="basic-addon3">ΑΓΚΥΡΙΟ (Άλυσος)</span>
                    </div>
                    <div class="col-8 col-sm-4">
						<input type="text" class="form-control" list="stateriTypes" name="stateriType" id="stateriType" placeholder="Ίντσες">
						<datalist id="stateriTypes">
							<% if(storeroom != undefined) { %>
								<% for (var i=0; i < storeroom.stateriType.length; i++) { %>
									<option value="<%= storeroom.stateriType[i] %>">
								<% } %>
							<% } %>
						</datalist>
						<input type="text" class="form-control" list="alysosTypes" name="alysosType" id="alysosType" placeholder="Ίντσες">
						<datalist id="alysosTypes">
							<% if(storeroom != undefined) { %>
								<% for (var i=0; i < storeroom.alysosType.length; i++) { %>
									<option value="<%= storeroom.alysosType[i] %>">
								<% } %>
							<% } %>
						</datalist>
						<input type="text" class="form-control" list="agkyrioChainTypes" name="agkyrioChainType" id="agkyrioChainType" placeholder="Ίντσες">
						<datalist id="agkyrioChainTypes">
							<% if(storeroom != undefined) { %>
								<% for (var i=0; i < storeroom.agkyrioChainType.length; i++) { %>
									<option value="<%= storeroom.agkyrioChainType[i] %>">
								<% } %>
							<% } %>
						</datalist>
                    </div>
                    <div class="col-8 col-sm-4">
                        <input type="number" class="form-control" name="stateriCounter" id="stateriCounter" placeholder="x2" min="0">
                        <input type="number" class="form-control" name="alysosCounter" id="alysosCounter" min="0">
                        <input type="number" class="form-control" name="agkyrioChainCounter" id="agkyrioChainCounter" placeholder="x2" min="0">
                    </div>
                </div>
				<br>
                <div class="row">
                    <div class="col-8 col-sm-4">
                        <label class="form-label"><strong>ΕΞΑΡΤΗΜΑΤΑ ΠΟΝΤΙΣΕΩΣ</strong></label>
                    </div>
                    <div class="col-8 col-sm-4">
                        <label class="form-label"><strong>ΤΥΠΟΣ</strong></label>
                    </div>
                    <div class="col-8 col-sm-4">
                        <label class="form-label"><strong>ΤΕΜ</strong></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8 col-sm-4">
                        <span class="input-group-text" id="basic-addon3">ΣΤΡΕΠΤΗΡΑΣ</span>
                        <span class="input-group-text" id="basic-addon3">ΝΑΥΤΙΚΟ ΚΛΕΙΔΙ</span>
                        <span class="input-group-text" id="basic-addon3">ΑΓΚΥΡΙΟ</span>
                    </div>
                    <div class="col-8 col-sm-4">
						<input type="text" class="form-control" list="streptyrasTypes" name="streptyrasType" id="streptyrasType" placeholder="Ίντσες">
						<datalist id="streptyrasTypes">
							<% if(storeroom != undefined) { %>
								<% for (var i=0; i < storeroom.streptyrasType.length; i++) { %>
									<option value="<%= storeroom.streptyrasType[i] %>">
								<% } %>
							<% } %>
						</datalist>
						<input type="text" class="form-control" list="navyKeyTypes" name="navyKeyType" id="navyKeyType" placeholder="Ίντσες">
						<datalist id="navyKeyTypes">
							<% if(storeroom != undefined) { %>
								<% for (var i=0; i < storeroom.navyKeyType.length; i++) { %>
									<option value="<%= storeroom.navyKeyType[i] %>">
								<% } %>
							<% } %>
						</datalist>
						<input type="text" class="form-control" list="agkyrioTypes" name="agkyrioType" id="agkyrioType" placeholder="Κιλά">
						<datalist id="agkyrioTypes">
							<% if(storeroom != undefined) { %>
								<% for (var i=0; i < storeroom.agkyrioType.length; i++) { %>
									<option value="<%= storeroom.agkyrioType[i] %>">
								<% } %>
							<% } %>
						</datalist>
                    </div>
                    <div class="col-8 col-sm-4">
                        <input type="number" class="form-control" name="streptyrasCounter" id="streptyrasCounter" min="0">
                        <input type="number" class="form-control" name="navyKeyCounter" id="navyKeyCounter" min="0">
                        <input type="number" class="form-control" name="agkyrioCounter" id="agkyrioCounter" min="0">
                    </div>
                </div>
			</div>

			<br>

			<div class="text-center">
				<a onclick="window.history.back()" class="btn btn-outline-primary float-left">Πίσω</a>
				<button class="btn btn-outline-primary">Εγγραφή</button>
			</div>
		</form>
	</div>
</div>
<br>

<% include ../partials/footer %>
