<% include ./partials/header %>

<h2 align="center">Φάροι και Πυρσοί</h2>
<% for (var i=0; i < searchedAuto.length; i++) { %>
    <div class="container">
        <div class="row">
            <form action="/autoLighthouses/search/<%= searchedAuto[i]._id %>" method="POST" class="row g-3">
                <div class="card mb-3 mx-auto" style="max-width: 540px;">
                    <div class="row g-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>ΑΕΦ: <%= searchedAuto[i].aef %></strong></li>
                            <li class="list-group-item"><strong>ΟΝΟΜΑΣΙΑ: <%= searchedAuto[i].lighthouse %></strong></li>
                            <button class="btn btn-primary" type="submit">Στοιχεία Φάρου/Πυρσού</button>
                        </ul>
                    </div>
                </div>
            </form>
        </div>
    </div>
<% } %>
<br>

<div class="container">
	<div class="row">
		<div class="col text-center">
			<a onclick="window.history.back()" class="btn btn-outline-primary float-left">Πίσω</a>
			<a href="/" class="btn btn-outline-primary">Αρχική Σελίδα</a>
		</div>
	</div>
</div>

<% include ./partials/footer %>
